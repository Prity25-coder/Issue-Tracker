<!-- form -->
<div class="container w-50">
  <div class="d-flex justify-content-between my-2">
    <h3>Create Issue Page</h3>
  </div>
  <form
    action="/api/v1/issues/<%= projectId %>"
    method="POST"
    class="p-2 border border-secondary-subtle mb-4"
    id="createIssue"
  >
    <div class="mb-3">
      <div class="input-group">
        <span class="input-group-text">Title</span>
        <input
          required
          name="title"
          type="text"
          aria-label="name"
          class="form-control"
          placeholder="enter title name"
        />
      </div>
    </div>

    <div class="mb-3">
      <div class="input-group">
        <label for="exampleFormControlTextarea1" class="form-label p-2"
          >Description</label
        >
        <textarea
          class="form-control"
          id="exampleFormControlTextarea1"
          name="description"
        ></textarea>
      </div>
    </div>

    <div class="mb-3">
      <div class="input-group">
        <span class="input-group-text">Label</span>
        <select
          class="form-select"
          aria-label="Default select example"
          name="label"
        >
          <option selected disabled>Choose label</option>
          <% if(labels.length > 0) { labels.forEach(label => { %>
          <option value="<%= label.title %>"><%= label.title %></option>
          <% }) %> <% } %>
        </select>
      </div>
    </div>

    <div class="mb-3">
      <div class="input-group">
        <span class="input-group-text">Author</span>
        <input
          required
          name="author"
          type="text"
          aria-label="text"
          class="form-control"
          placeholder="enter author name"
        />
      </div>
    </div>
    <div align="end">
      <a class="btn btn-danger" href="/api/v1/projects/<%= projectId %>"
        >Cancel</a
      >
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>
